<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.gameDetails.DetailsFragment">


    <TextView
        android:id="@+id/tvWinBy2Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlayerCountDetails"
        android:layout_alignStart="@+id/tvPlayerCountDetails"
        android:layout_marginTop="20dp"
        android:text="Win By 2: "
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvPlayerCountDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStartedDetails"
        android:layout_alignStart="@+id/tvStartedDetails"
        android:layout_marginTop="20dp"
        android:text="Players: 4/6"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvStartedDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGameTypeDetails"
        android:layout_alignStart="@+id/tvGameTypeDetails"
        android:layout_marginTop="20dp"
        android:text="Started: "
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvGameTypeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Game Type: "
        android:textColor="#000000"
        android:textSize="24sp" />
</RelativeLayout>