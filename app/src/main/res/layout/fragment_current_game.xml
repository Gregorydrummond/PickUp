<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.games.CurrentGameFragment">


    <ImageView
        android:id="@+id/ivCurrentGameProfilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/tvCurrentGameParkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCurrentGameProfilePicture"
        android:layout_alignStart="@+id/ivCurrentGameProfilePicture"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:text="Park Name" />

    <TextView
        android:id="@+id/tvCurrentGameGameType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCurrentGameParkName"
        android:layout_alignStart="@+id/tvCurrentGameParkName"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:text="Game Type" />

    <TextView
        android:id="@+id/tvCurrentGameTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCurrentGameGameType"
        android:layout_alignStart="@+id/tvCurrentGameGameType"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:text="Teams" />

    <Button
        android:id="@+id/btnCurrentGameStart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCurrentGameTeams"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#E18804"
        android:text="Start Game" />

</RelativeLayout>