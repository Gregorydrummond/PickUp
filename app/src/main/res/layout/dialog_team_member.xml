<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    app:cardBackgroundColor="#FDE3BC"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvNameTeamDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/ivProfilePictureTeamDialog"
            android:fontFamily="@font/rock_salt"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp"
            app:autoSizeTextType="uniform"
            tools:text="Greg" />

        <TextView
            android:id="@+id/tvStreakTeamDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWinPercentageTeamDialog"
            android:layout_alignStart="@+id/tvWinPercentageTeamDialog"
            android:layout_alignEnd="@+id/tvWinPercentageTeamDialog"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/rock_salt"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            tools:text="3 Game Win Streak" />

        <TextView
            android:id="@+id/tvWinPercentageTeamDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWinsTeamDialog"
            android:layout_alignStart="@+id/tvWinsTeamDialog"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/rock_salt"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            tools:text="Win Percentage: 78%" />

        <ImageView
            android:id="@+id/ivProfilePictureTeamDialog"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/tvWinsTeamDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameTeamDialog"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/ivProfilePictureTeamDialog"
            android:fontFamily="@font/rock_salt"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="12sp"
            app:autoSizeTextType="uniform"
            tools:text="Wins: 42" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>