<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFD8"
    tools:context=".fragments.profile.ProfileStatsFragment">


    <TextView
        android:id="@+id/tvTotalPointsPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGamesPlayedPS"
        android:layout_alignStart="@+id/tvGamesPlayedPS"
        android:layout_alignEnd="@+id/tvGamesPlayedPS"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/rock_salt"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:text="Total Points: 521" />

    <TextView
        android:id="@+id/tvGamesPlayedPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGamesWonPS"
        android:layout_alignStart="@+id/tvGamesWonPS"
        android:layout_alignEnd="@+id/tvGamesWonPS"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rock_salt"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:text="Games Played: 89" />

    <TextView
        android:id="@+id/tvGamesWonPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/rock_salt"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:text="Games Won: 47" />
</RelativeLayout>