<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFD8"
    tools:context=".fragments.profile.ProfileSettingsFragment">

    <Button
        android:id="@+id/btnSignout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#E18804"
        android:fontFamily="@font/rock_salt"
        android:text="Sign Out" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSignout"
        android:layout_alignStart="@+id/tvGameTypesPS"
        android:layout_alignEnd="@+id/spinnerGameTypePS"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="#E18804"
        android:fontFamily="@font/rock_salt"
        android:text="Save" />

    <TextView
        android:id="@+id/tvGameTypesPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMaxDistancePS"
        android:layout_alignStart="@+id/tvMaxDistancePS"
        android:layout_alignEnd="@+id/tvMaxDistancePS"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rock_salt"
        android:text="Filter By Game Type"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvMaxDistancePS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etMaxDistancePS"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/etMaxDistancePS"
        android:fontFamily="@font/rock_salt"
        android:text="Max Distance (miles)"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etMaxDistancePS"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/spinnerGameTypePS"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/etMaxDistancePS"
        android:layout_alignTop="@+id/tvGameTypesPS"
        android:layout_alignEnd="@+id/etMaxDistancePS"
        android:layout_marginEnd="0dp" />

</RelativeLayout>